<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %></h1>
      
      <% unless @users.empty? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
      <% end %>
    </td>
    <td class="sidebar round">
      <%= render 'shared/profile_info' %>
      <%= render 'shared/stats' %>
      <%= render 'shared/follow_gallery' %>
    </td>
  </tr>
</table>
